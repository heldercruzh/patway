Postgres

Deleção forçada
1) SELECT pg_terminate_backend(pg_stat_activity.pid)
FROM pg_stat_activity
WHERE pg_stat_activity.datname = 'petwaydb';

Drop database petwaydb;

Create database petwaydb;

